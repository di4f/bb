install:V: install-$MKSHELL
install-sh:VQ: build
	if test -d shr ; then
		echo Installing shared files...
		cp -rf shr $HOME/shr/..
		echo Done installing shared files
	fi
	if test -d app ; then
		echo Installing application files...
		mkdir -p $APPDIR/$PKG_NAME && cp -rf app/* $APPDIR/$PKG_NAME/
		echo Done installing application files
	fi
	if test -d exe ; then
		echo Installing executables...
		mkdir -p $EXEDIR
		cp -rf exe/* $EXEDIR/
		files=`goblin basename $(ls exe)`
		for i in $files ; do
			chmod 0755 $EXEDIR/$i
		done
		echo Done installing executables
	 fi

